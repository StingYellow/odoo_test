<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_appointment_form" model="ir.ui.view">
        <field name="name">view.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <!--                ADD STATE-->
                <header>

                    <button name="action_xac_thuc" string="Xac thuc" type="object"
                            invisible="state in ['xac nhan','dang xac thuc']"/>
                    <button name="action_xac_nhan" string="Xac nhan" type="object" invisible="state =='xac nhan'"/>
                    <button name="action_huy" string="Huy" type="object"/>

                    <field name="state" widget="statusbar" nolable="1"/>
                    <!--             statusbar_visible="nhap, xac thuc, xac nhan" :chi hien thi nhung truong liet ke        -->
                </header>
                <sheet>
                    <!--                ADD PRIORITY-->
                    <div>
                        <h2>
                            <field name="priority" widget="priority"/>
                        </h2>
                    </div>

                    <group>
                        <group>
                            <field name="patient_id"/>
                            <field name="appointment_time"/>
                            <field name="ref"/>
                            <field name="doctor_id" widget="many2one_avatar"/>
                            <field name="gender"/>
                            <field name="booking_date" help="Date of booking" default_focus="1"/>
                        </group>

                    </group>
                    <!--                    ADD NOTEBOOK-->
                    <notebook>
                        <page string="Prescription" name="prescription">
                            <field name="prescription" placeholder="Enter your prescription"
                                   options="{'collaborative':true, 'resizable':true}"/>
                        </page>

                        <page string="Pharmacy" name="pharmacy">
                            <group>
                                <field name="pharmacy_lines">
                                    <list editable="bottom">
                                        <field name="product_id"/>
                                        <field name="price_unit"/>
                                        <field name="qty"/>
                                    </list>
                                    <form>
                                        <group>
                                            <field name="product_id"/>
                                            <field name="price_unit"/>
                                            <field name="qty"/>
                                        </group>
                                    </form>
                                </field>
                            </group>
                        </page>
                    </notebook>


                    <div>
                        <group>
                            <group>
                                <button name="%(action_appointment)d" string="Back" type="action" class="oe_highlight"
                                        icon="fa-hand-o-left" aria-hidden="true"/>
                                <button name="%(action_patient)d" string="Sang patient" type="action"
                                        class="oe_highlight"
                                        help="ZZZAAAZZZZ"
                                        confirm="Ban muon chac chan muon roi khoi trang?"
                                        icon="fa-circle-thin" aria-hidden="true"/>
                                <!--                            <a href="https://www.facebook.com/" target="_blank" class="btn btn-primary">Má»Ÿ Facebook</a>-->

                            </group>
                            <group>
                                <button name="action_open_facebook" string="fb" type="object" class="btn-primary"
                                        icon="fa-facebook"
                                        aria-hidden="true"/>
                                <button name="action_test" string="aaaa" type="object" class="oe_highlight"
                                />
                            </group>
                        </group>
                    </div>
                </sheet>

                <div>
                    <chatter>
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </chatter>
                </div>
            </form>
        </field>
    </record>

    <record id="view_appointment_list" model="ir.ui.view">
        <field name="name">view.appointment.list</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list decoration-success="state=='xac nhan'" decoration-danger="state=='huy'" sample="1" multi_edit="1">
                <field name="patient_id" optional="hide"/>
                <field name="appointment_time"/>
                <field name="doctor_id" widget="many2one_avatar_user"/>
                <field name="booking_date" optional="show"/>
                <field name="gender"/>
                <field name="activity_ids" widget="list_activity"/>
                <field name="state"
                       decoration-success="state == 'xac nhan'"
                       decoration-info="state =='dang xac thuc'"
                       decoration-warning="state =='nhap'"
                       decoration-danger="state=='huy'"
                       widget="badge"/>

            </list>
        </field>
    </record>


    <record id="action_appointment" model="ir.actions.act_window">
        <field name="name">Appointment</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hospital_appointment_view"
              name="Appointment"
              parent="menu_hospital_appointment_root"
              action="action_appointment"
              sequence="10"/>
</odoo>